<main>
    <h1>Attach a new accessory</h1>
    <div class="form attach-accessory">
        <h2>{{cube.name}}</h2>
        <img class="cube-details-img" src="{{cube.imageUrl}}">

        {{#if hasAccessories}}
            <form method="post" class="attach-form">
                <label for="accessory">Accessories</label>
                <select id="accessory" name="accessory">
                    {{#each accessories}}
                        <option value="{{_id}}">{{name}}</option>
                    {{/each}}
                </select>
                <input type="submit" value="Attach">
            </form>
        {{else}}
            <h3 class="no-results">This cube has all available accessories so far or there is no available at all...</h3>
        {{/if}}

        <div class="btn-group">
            <a class="btn" href="/cubes/{{cube._id}}/details">Back</a>
        </div>
    </div>
</main>